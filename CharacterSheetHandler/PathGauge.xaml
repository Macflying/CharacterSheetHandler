<UserControl x:Class="CharacterSheetHandler.PathGauge"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:CharacterSheetHandler"
                 mc:Ignorable="d"
                 x:Name="PathGaugeName">
    <UserControl.Resources>
        <Style TargetType="CheckBox" BasedOn="{StaticResource RoundedCheckBox}" />
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Style="{StaticResource SubTitle}"
                   Text="Humanity/Path" />
        <local:TenLevelsGauge Level="{Binding ElementName=PathGaugeName, Path=Level}" />
    </StackPanel>
</UserControl>