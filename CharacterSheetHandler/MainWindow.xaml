<Window x:Class="CharacterSheetHandler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterSheetHandler"
        mc:Ignorable="d"
        Background="LightGray"
        Title="Character sheet">
    <DockPanel>
        <TextBlock HorizontalAlignment="Center"
                   Text="20th ANNIVERSARY EDITION"
                   DockPanel.Dock="Top"
                   FontSize="16" />
        <TextBlock HorizontalAlignment="Center"
                   Text="VAMPIRE"
                   FontSize="70"
                   DockPanel.Dock="Top"
                   Margin="-20" />
        <TextBlock HorizontalAlignment="Center"
                   Text="THE MASQUERADE"
                   FontWeight="DemiBold"
                   DockPanel.Dock="Top"
                   FontSize="20" />

        <ScrollViewer Style="{StaticResource ScollViewer}">
            <StackPanel>
                <local:SheetHeader Margin="10,5" />
                <local:Attributes Margin="10,5" />
                <local:Abilities Margin="10,5" />
                <local:Advantages Margin="10,5" />
                <local:Status Margin="10,5" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>