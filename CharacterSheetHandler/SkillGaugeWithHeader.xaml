<UserControl x:Class="CharacterSheetHandler.SkillGaugeWithHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CharacterSheetHandler"
             mc:Ignorable="d"
             Name="SkillGaugeWithHeaderName">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource EntryHeaderTextBlock}" />
    </UserControl.Resources>
    <DockPanel>
        <TextBlock DockPanel.Dock="Left"
                   Text="{Binding ElementName=SkillGaugeWithHeaderName, Path=Header}" />
        <Line DockPanel.Dock="Right"
              Style="{StaticResource BlankLine}" />
        <local:FiveLevelsGauge DockPanel.Dock="Right"
                               VerticalAlignment="Bottom"
                               Level="{Binding ElementName=SkillGaugeWithHeaderName, Path=Level}" />
        <Separator VerticalAlignment="Bottom" />
    </DockPanel>
</UserControl>